@using BlogNullReference.Web.Configuration.Settings

@{
    var enableGoogleTags = ViewData[nameof(ISiteSettings.GoogleTagsCode)] != null
        && ViewData[nameof(ISiteSettings.GoogleTagsCode)] is string;
}

@if (enableGoogleTags)
{
    var code = ViewData[nameof(ISiteSettings.GoogleTagsCode)] as string;

    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=@(code)"height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
}