  "main": "index.js",
  "scripts": {
    "dev": "webpack --color --progress",
    "dev:watch": "npm run dev -- --watch",
    "release": "npm run lint && npm run test && webpack --config webpack.prod.config.js --progress",
    "lint": "eslint --ext ts,tsx Scripts/",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest"
