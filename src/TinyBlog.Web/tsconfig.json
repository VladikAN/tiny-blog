{
    "compilerOptions": {
        "outDir": "./wwwroot/js",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react"
    },
    "include": [
        "./Scripts/**/*"
    ],
    "exclude": [
        "**/node_modules/**",
        "**/testcafe/**",
    ],
    "typeRoots": [
        "./node_modules/@types"
    ],
    "types": [
        "jwt-decode",
        "react",
        "react-dom",
        "react-redux",
        "react-redux-toastr",
        "react-router-dom",
        "query-string",
        "jest",
        "enzyme",
        "enzyme-adapter-react-16",
        "mongoose"
    ]
}